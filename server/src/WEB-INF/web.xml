<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>database</param-value>
   </context-param>
    
    <servlet>
     <servlet-name>register</servlet-name>
     <servlet-class>com.myapp.servlet.Register</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>register</servlet-name>
     <url-pattern>/register</url-pattern>
   </servlet-mapping>  
   
   <servlet>
     <servlet-name>login</servlet-name>
     <servlet-class>com.myapp.servlet.Login</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>login</servlet-name>
     <url-pattern>/login</url-pattern>
   </servlet-mapping>  

    <servlet>
     <servlet-name>logoff</servlet-name>
     <servlet-class>com.myapp.servlet.Logoff</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>logoff</servlet-name>
     <url-pattern>/logoff</url-pattern>
   </servlet-mapping>  

    <servlet>
     <servlet-name>home</servlet-name>
     <servlet-class>com.myapp.servlet.HomePage</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>home</servlet-name>
     <url-pattern>/home</url-pattern>
   </servlet-mapping>  

    <servlet>
     <servlet-name>create_channel</servlet-name>
     <servlet-class>com.myapp.servlet.CreateChannel</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>create_channel</servlet-name>
     <url-pattern>/create_channel</url-pattern>
   </servlet-mapping>  


    <servlet>
     <servlet-name>del_channel</servlet-name>
     <servlet-class>com.myapp.servlet.DelChannel</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>del_channel</servlet-name>
     <url-pattern>/del_channel</url-pattern>
   </servlet-mapping>  


   <!-- add any additional servlets and servlet mappings here -->
</web-app>
